<script>
	import { beforeUpdate } from 'hamber';
	import Nested from './Nested.hamber';

	export let snapshots;
	export let visibleThings = [];

	beforeUpdate(() => {
		if (!snapshots) {
			// first run
			snapshots = [];
		}

		snapshots.push(visibleThings);
	});
</script>

<Nested bind:visibleThings={visibleThings} />
