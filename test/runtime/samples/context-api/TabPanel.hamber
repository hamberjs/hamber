<script>
	import { getContext, onDestroy } from 'hamber';
	import { TABS } from './Tabs.hamber';

	const panel = {};
	const { registerPanel, unregisterPanel, selectedPanel } = getContext(TABS);
	registerPanel(panel);

	onDestroy(() => {
		unregisterPanel(panel);
	});
</script>

{#if $selectedPanel === panel}
	<slot></slot>
{/if}
